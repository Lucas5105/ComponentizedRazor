@model ComponentizedRazor.Components.Input.Input
<div class="form-group">
    @if (!string.IsNullOrEmpty(Model.Label))
    {
        <label for="input@(Model.Id)">@Model.Label</label>
    }
    <input id="input@(Model.Id)" type="@(Model.Type)" placeholder="@(Model.PlaceHolder)" name="@(Model.Name)" @(Model.isRequired == true ? "required" : "") class="form-control" />
</div>