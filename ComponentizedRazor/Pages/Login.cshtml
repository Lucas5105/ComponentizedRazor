@page
@model ComponentizedRazor.Pages.LoginModel
@{
}

@using Components.Button
@using Components.Input

<div class="d-flex justify-content-center align-items-center h-100">
    <form class="d-flex flex-column justify-content-center gap-3" method="post" asp-page-handler="Login">
        <partial name="../Components/Input/Index" model="@(new Input {Type=enumInputType.Email, Label = "Email", PlaceHolder="Insert Email", Name="userEmail", isRequired = true})" />
        <partial name="../Components/Input/Index" model="@(new Input {Type=enumInputType.Password, Label = "Password", PlaceHolder="Insert Password", Name="userPassword", isRequired = true})" />
        <partial name="../Components/Button/Index" model="@(new Button {Text = "Fazer Login", Type = enumButtonTypes.Submit})" />
        <a href="/Register">Register</a>
    </form>
</div>